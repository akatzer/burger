<img src="../assets/img/burg.jpg" width="200px">

<h1>Eat-Da-Burger</h1>

<h2>Burgers Available</h2>

<ul>
    {{#each burgers}}
    {{#unless this.devoured}}
    <li>
        {{this.id}}
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button class="btn-primary" type="submit">Eat Da' Burger</button>
        </form>

    </li>
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Devoured</h2>

{{#each burgers}}
{{#if this.devoured}}
<li>
    {{this.id}}
    {{this.burger_name}}

</li>
{{/if}}
{{/each}}

<h2>Add A Burger</h2>

<form class="create-update-form" action="/" method="POST">

    <div class="form-group">
        <p>Burger name</p>
        <input type="text" id="ca" name="burger_name">
    </div>

    <button class="btn-primary" type="submit">Order Da' Burger</button>
</form>