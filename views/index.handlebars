<div class="container-fluid">
    <img src="../assets/img/burg.jpg" width="200px">
    
    <div class="card">
<h1>Eat-Da-Burger</h1>
    </div>
    


    <div class="container-fluid">
        <div class="card">
            <h2>Burgers Ordered</h2>

            <ul>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>

                    {{this.burger_name}}

                    {{!-- <form value="/burgers/{{this.id}}?_method=PUT" method="POST"> --}}
                        <button type="button" class="eat-burger" id={{this.id}}>Eat Da' Burger</button>
                        {{!-- </form> --}}

                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>



        <div class="card">
            <h2>Burgers Devoured</h2>

            {{#each burgers}}
            {{#if this.devoured}}
            <li>

                {{this.burger_name}}

            </li>
            {{/if}}
            {{/each}}
        </div>

    </div>




    <div class="container-fluid">

        <div class="card">
            <h2>Add A Burger</h2>

            <form class="create-update-form" action="/burgers" method="POST">

                <div class="form-group">
                    <input type="text" id="ca" name="burger_name" placeholder="Enter Burger Name">
                </div>

                <button class="btn-primary" type="submit">Order Da' Burger</button>
            </form>

        </div>
    </div>
</div>